@model List<Pronia.Models.Card>

@{
ViewData["Title"] = "Cards List";
}

<div class="container mt-4">

    <!-- Заголовок + кнопка Create -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Cards List</h2>
        <a asp-area="Admin" asp-action="Create" class="btn btn-primary btn-lg">Create New Card</a>
    </div>

    <!-- Таблица карточек -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Image</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var card in Model)
            {
            <tr>
                <td>@card.Id</td>
                <td>@card.Title</td>
                <td>@card.Description</td>
                <td>@card.Category?.Name</td>
                <td>
                    <img src="@card.ImageUrl" class="img-thumbnail" style="max-width:70px;" />
                </td>
                <td class="text-end">
                    <a asp-action="Update" asp-route-id="@card.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@card.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this card?');">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>

</div>
